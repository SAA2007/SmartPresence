# SmartPresence Environment Config
# Copy this file to .env and fill in your values
# ─── Authentication ───
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
SETTINGS_PIN=1234
SECRET_KEY=smartpresence-secret-change-me

# ─── Telegram Crash Reports ───
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
TELEGRAM_CHAT_ID=YOUR_CHAT_ID_HERE

# ─── Encryption ───
DB_ENCRYPTION_KEY=smartpresence-encryption-key-change-me

# ─── SMTP (Email Reports via Brevo) ───
SMTP_SERVER=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_LOGIN=YOUR_BREVO_LOGIN
SMTP_KEY=YOUR_BREVO_SMTP_KEY
SMTP_SENDER=your-sender@email.com
ADMIN_EMAIL=your-admin@email.com
